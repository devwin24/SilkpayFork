NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/silkpay

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-32-chars-minimum
JWT_EXPIRY=30m
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# SilkPay API (Get from https://merchant.silkpay.ai/)
SILKPAY_API_URL=https://api.dev.silkpay.ai
SILKPAY_MERCHANT_ID=your-merchant-id
SILKPAY_SECRET_KEY=your-secret-key

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Email (Optional - configure when needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@silkpay.local

# Logging
LOG_LEVEL=debug
